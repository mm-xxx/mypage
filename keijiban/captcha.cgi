sub decrypt {
	my $caplen = shift;

	# ï¿½ï¿½ï¿½ï¿½
	$buf =~ s/N/\n/g;
	$buf =~ s/([0-9A-Fa-f]{2})/pack('H2', $1)/eg;
	my $plain = RC4( $cf{captcha_key}, $buf );

	# ï¿½æ“ªï¿½Ìï¿½ï¿½ï¿½ï¿½ğ’Šo
	$plain =~ s/^(\d{$caplen}).*/$1/ or err_img();
	return $plain;
}

